<fieldset class="form-signin">
    <legend>User Login</legend>
    <div class="form-group row has-danger">
        <div class="col-sm-4">
            <input id="input-username" type="text" class="form-control form-control-danger" placeholder="Username">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            <input id="input-password" type="password" class="form-control" placeholder="First Name">
        </div>
    </div>
    <button id="sign-in" class="btn btn-lg btn-primary btn-block">Sign in</button>
</fieldset>
