<fieldset id="registration-form">
    <legend>Register a new User</legend>
    <div class="form-group row has-danger">
        <label for="tb-reg-username" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-4">
            <input type="text" class="form-control form-control-danger" id="tb-reg-username" placeholder="Username">
        </div>
    </div>
    <div class="form-group row">
        <label for="tb-reg-frstname" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="tb-reg-frstname" placeholder="First Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="tb-reg-lsname" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="tb-reg-lsname" placeholder="Last Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="tb-reg-email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="tb-reg-email" placeholder="Email">
        </div>
    </div>
    <div class="form-group row">
        <label for="tb-reg-pass" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="tb-reg-pass" placeholder="Password">
        </div>
    </div>
    <div class="form-group row">
        <label for="tb-reg-pass-confirm" class="col-sm-2 col-form-label">Confirm Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="tb-reg-pass-confirm" placeholder="Confirm Password">
        </div>
    </div>
    <button class="btn btn-primary btn-lg btn-block" id="btn-register">Register</button>
</fieldset>
